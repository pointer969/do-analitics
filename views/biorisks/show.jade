extends ../layout/default

block content
  main.main
        // Breadcrumb
        ol.breadcrumb
          li.breadcrumb-item Administração
          li.breadcrumb-item Configurações
          li.breadcrumb-item Parâmetros
          li.breadcrumb-item.active Zonas de Risco Ambiental
        .container-fluid
          .animated.fadeIn
            .row
              .col-md-12
                  .card
                    .card-header
                      i.fa.fa-edit
                      |  Zonas de Risco - Detalhes
                    .card-body   
                      != messages()  
                      form.form-horizontal(action='/biorisk/delete/#{biorisk.id}', method='post') 
                         .form-group
                          label.form-control-label(for='mapid') Map ID
                          .controls
                            .input-group
                              input#mapid.form-control(name='mapid',size='10', type='text', value='#{biorisk.mapid}', readonly=true)
                        .form-group
                          label.form-control-label(for='country') País
                          .controls
                            .input-group
                              input#country.form-control(name='country',size='100', type='text', value='#{biorisk.country}', readonly=true) 
                        .form-group
                          label.form-control-label(for='state') Estado
                          .controls
                            .input-group
                              input#state.form-control(name='state',size='100', type='text', value='#{biorisk.state}', readonly=true) 
                        .form-group
                          label.form-control-label(for='city') Cidade
                          .controls
                            .input-group
                              input#city.form-control(name='city',size='100', type='text', value='#{biorisk.city}', readonly=true)     
                        .form-group
                          label.form-control-label(for='district') Bairro
                          .controls
                            .input-group
                              input#district.form-control(name='district',size='100', type='text', value='#{biorisk.district}', readonly=true) 
                        .form-group
                          label.form-control-label(for='zone') Zona
                          .controls
                            .input-group
                              input#zone.form-control(name='zone',size='100', type='text', value='#{biorisk.zone}', readonly=true)
                        .form-group
                          label.form-control-label(for='risk') Risco
                          .controls
                            .input-group
                              input#risk.form-control(name='risk',size='16', type='text', value='#{biorisk.risk}', readonly=true) 
                        .form-group
                          label.form-control-label(for='points') Pontos
                          .controls
                            .input-group
                              input#points.form-control(name='points',size='16', type='text', value='#{biorisk.points}', readonly=true)    
                        .form-group 
                          label.col-md-3.form-control-label(for='activedYN') Ativo?                         
                          .controls
                            .col-md-9
                              select#active.form-control-sm(name='active', disabled=true)
                                option(value='true', selected=biorisk.active == true) Sim
                                option(value='false', selected=biorisk.active == false) Não
                        .form-group
                          label.form-control-label(for='createdAt') Criado em
                          .controls
                            .input-group
                              input#createdAt.form-control(size='16', type='text', readonly=true, value='#{biorisk.createdAt}')                                                                                                              
                        .form-actions                          
                          a(href='/biorisk/edit/#{biorisk.id}') 
                            button.btn.btn-sm.btn-success(type='button')
                              i.fa.fa-edit
                              |  Editar   
                            span    
                          button.btn.btn-sm.btn-primary(type='submit')
                            i.fa.fa-delicious
                            |  Deletar   
                          span         
                          a(href='/biorisk')                
                            button.btn.btn-sm.btn-info(type='button')
                              i.fa.fa-backward
                              |  Voltar a lista                               